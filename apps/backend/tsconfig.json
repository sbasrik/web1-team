{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "paths": {
          "@/*": ["src/*"]
        }
      },
      "include": ["src/**/*"],
      "exclude": ["node_modules"]
  }
  